{% extends 'login/base-login.html.twig' %}

{% block title %}Wachtwoord vergeten{% endblock %}

{% block body %}
<body class="password-reset-page">
<section class="password-reset">
    <form action="{{ path('app_password_reset') }}"method="post">
        <h1 class="password-reset-page">Wachtwoord vergeten</h1>
        <p class="password_reset-page">Geef je e-mailadres op om een wachtwoord reset link te verzenden.</p>
        <div class="inputbox">
        <input type="email" name="_username" id="username" placeholder="E-mail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <button class="login-page" type="submit">
            Verzend wachtwoord reset link
        </button>
        {# {% if error %}
            <div class="password-reset-page error" href="{{ path('app_login') }}">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %} #}
    </form>
    </section>
</body>
{% endblock %}

