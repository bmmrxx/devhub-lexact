{% extends 'base.html.twig' %}

{% block title %}Instellingen{% endblock %}

{% block body %}
<div class="settings-container">
    <h1><i class="fas fa-cog"></i>Instellingen</h1>
    
    <div class="settings-tabs">
        <button class="tab-btn active" data-tab="profile">Profiel</button>
        <button class="tab-btn" data-tab="security">Security</button>
        <button class="tab-btn" data-tab="notifications">Meldingen</button>
    </div>

    <div class="tab-content active" id="profile-tab">
        <form class="settings-form">
            <div class="form-group">
                <label>Naam</label>
                <input type="text" value="{{ app.user.name }}" class="form-input">
            </div>
            
            <div class="form-group">
                <label>Email</label>
                <input type="email" value="{{ app.user.email }}" class="form-input">
            </div>
            
            <div class="form-group">
                <label>Over mij</label>
                <textarea class="form-input" rows="3">Werknemer bij Lexact</textarea>
            </div>
            
            <button type="submit" class="save-btn">Opslaan</button>
        </form>
    </div>

    <div class="tab-content" id="security-tab">
        <form class="settings-form">
            <div class="form-group">
                <label>Huidige Wachtwoord</label>
                <input type="password" class="form-input">
            </div>
            
            <div class="form-group">
                <label>Nieuw Wachtwoord</label>
                <input type="password" class="form-input">
            </div>
            
            <div class="form-group">
                <label>Bevestig Wachtwoord</label>
                <input type="password" class="form-input">
            </div>
            
            <button type="submit" class="save-btn">Update wachtwoord</button>
        </form>
    </div>

    <div class="tab-content" id="notifications-tab">
        <div class="notification-settings">
            <div class="setting-item">
                <div>
                    <h4>Email meldingen</h4>
                    <p>Krijg mails over updates & feedback</p>
                </div>
                <label class="switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                </label>
            </div>
            
            <div class="setting-item">
                <div>
                    <h4>Feedback Alerts</h4>
                    <p>Wordt op de hoogte gesteld over nieuwe feedback</p>
                </div>
                <label class="switch">
                    <input type="checkbox" checked>
                    <span class="slider"></span>
                </label>
            </div>
        </div>
    </div>
</div>
{% endblock %}